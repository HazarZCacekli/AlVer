
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg" style="margin-top:80px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Bizimle İletişime Geçin</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                        <span>İletişim</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Telefon</h4>
                    <p>+90 555-555-55-55</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Adres</h4>
                    <p>Galata Kulesi</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>Açılış - Kapanış Zamanı</h4>
                    <p>10:00 - 23:00</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>hzorbeyc@gmail.com</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
<!-- Map Begin -->
<div class="map">
    <iframe src="https://maps.google.com/maps?width=100%25&amp;height=350&amp;hl=en&amp;q=Galata,%20Bereketzade,%2034421%20Beyo%C4%9Flu/%C4%B0stanbul+(%C4%B0%C5%9F%20Rotas%C4%B1)&amp;t=h&amp;z=16&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"
            height="500" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    <div class="map-inside">
        <i class="icon_pin"></i>
        <div class="inside-widget">
            <h4>Galata Kulesi</h4>
            <ul>
                <li>Telefon: +90 555-555-55-55</li>
                <li>Adres: Azapkapı, Beyoğlu/İstanbul</li>
            </ul>
        </div>
    </div>
</div>
<!-- Map End -->
<!-- Contact Form Begin -->
<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>İletişime Geçelim</h2>
                    <h3>@TempData["Success"] </h3>
                </div>
            </div>
        </div>
        <form asp-controller="Contact" asp-action="Index">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <input type="text" placeholder="Ad - Soyad" name="Name" required>
                </div>
                <div class="col-lg-6 col-md-6">
                    <input type="email" placeholder="Email Adresiniz" name="Email" required>
                </div>
                <div class="col-lg-12 text-center">
                    <textarea placeholder="Mesajınız" name="MessageBody" required></textarea>
                    <button type="submit" class="site-btn">Mesajı Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Contact Form End -->