@using AlVer.Classes;
@{
    Layout = "_LayoutAdmin";
}
@model List<ToDoTask>
<div class="col-4" style="margin-left:70px;margin-top:50px;">
    <form asp-controller="Admin" asp-action="AddTask" asp-route-which="2">
        <input type="text" name="TaskBody" style="height:37px;" placeholder="Yapılacak İş" required>
        <button class="btn btn-primary m-2">Ekle</button>
    </form>
</div>

<div class="col-sm-12 col-xl-11" style="margin-left:50px;margin-top:50px;">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Tüm Mesajlar</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Yapılacak ID</th>
                    <th scope="col">Yapılacak İş</th>
                    <th scope="col">Tarih</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ToDoTask item in Model)
                {
                    <tr>
                        <th scope="row">@item.ToDoTaskId</th>
                        <td>@item.TaskBody</td>
                        <td>@DateWriting.DateWrite(item.Date)</td>
                        <td><a class="btn btn-danger rounded-pill m-2" asp-controller="Admin" asp-action="DeleteTask" asp-route-id="@item.ToDoTaskId" asp-route-which="2">Sil</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>