@{
    ViewData["Title"] = "Anasayfa";
}
@model List<Product>
<!-- Hero Section Begin -->
<section class="hero" style="margin-top:50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-top:30px;">
                <div class="hero__item set-bg" data-setbg="/img/banner.jpg">
                    <div class="hero__text">
                        <span>TAPTAZE ÜRÜNLER</span>
                        <h2>Sebze ve Meyveler <br />100% Organik</h2>
                        <p>Ücretsiz Teslimat</p>
                        <a asp-controller="Home" asp-action="Shop" class="primary-btn">ALIŞVERİŞE BAŞLA</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">

                @foreach (Category item in ViewBag.Categories as List<Category>)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/@item.Image">
                            <h5><a asp-controller="Home" asp-action="Shop" asp-route-category="@item.CategoryId">@item.CategoryName</a></h5>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Özel Ürünler</h2>
                </div>

            </div>
        </div>
        <div class="row featured__filter">

            @foreach (Product item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 ">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/product/@item.Image">
                            <ul class="featured__item__pic__hover">
                                <li><a asp-controller="Product" asp-action="AddToFavorites" asp-route-which="1" asp-route-id="@item.ProductId"><i class="fa fa-heart"></i></a></li>
                                <li><a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId"><i class="fa fa-eye"></i></a></li>
                                @if (item.Stock > 0)
                                {
                                    <li><a asp-controller="Product" asp-action="AddToBasket" asp-route-id="@item.ProductId" asp-route-which="1"><i class="fa fa-shopping-cart"></i></a></li>
                                }
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId">@item.Name</a></h6>
                            <h5>@item.Price ₺</h5>
                        </div>
                    </div>
                </div>
            }
                

        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Latest Product Section Begin -->
<section class="latest-product spad" style="margin-bottom:50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Son Eklenenler</h4>
                    <div class="latest-product__slider owl-carousel">
                        <div class="latest-prdouct__slider__item">
                            @foreach (Product item in ViewBag.Last as List<Product>)
                            {
                                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="/product/@item.Image" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Name</h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </a>
                            }
                        </div>
                        <div class="latest-prdouct__slider__item">
                            @foreach (Product item in ViewBag.Last2 as List<Product>)
                            {
                                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="/product/@item.Image" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Name</h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Çok Satanlar</h4>
                    <div class="latest-product__slider owl-carousel">
                        <div class="latest-prdouct__slider__item">
                            @foreach (Product item in ViewBag.Most as List<Product>)
                            {
                                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="/product/@item.Image" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Name</h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </a>
                            }
                        </div>
                        <div class="latest-prdouct__slider__item">
                            @foreach (Product item in ViewBag.Most2 as List<Product>)
                            {
                                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="/product/@item.Image" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Name</h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</section>
<!-- Latest Product Section End -->
