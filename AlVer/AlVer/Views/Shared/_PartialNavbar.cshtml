                    </div>
                </div>
                
            </li>
            
            <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
            @if (User.IsInRole("Customer"))
            {
                <li>
                    <div class="dropdown">
                        <a>@User.Identity.Name.Split('@')[0]</a>
                        <div class="dropdown-content">
                            <a asp-controller="Profile" asp-action="Basket">Sepetim</a>
                            <a asp-controller="Profile" asp-action="Favorites">Favorilerim</a>
