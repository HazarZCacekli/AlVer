            <li>
                <div class="dropdown">
                    <a asp-controller="Home" asp-action="Shop">Tüm Ürünler</a>
                    <div class="dropdown-content">
                        <a asp-controller="Home" asp-action="Shop" asp-route-category="5">Atıştırmalık</a>
