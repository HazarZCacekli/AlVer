                        <a asp-controller="Home" asp-action="Shop" asp-route-category="6">İçecek</a>
                        <a asp-controller="Home" asp-action="Shop" asp-route-category="12">Kırtasiye</a>
                        <a asp-controller="Home" asp-action="Shop" asp-route-category="2">Meyve</a>
