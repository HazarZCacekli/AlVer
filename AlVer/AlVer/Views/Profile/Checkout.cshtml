@model List<Basket>
<partial name="_PartialSidebar"></partial>
   <!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Ödeme</h2>
                    <div class="breadcrumb__option">
                        <a>Anasayfa</a>
                        <span>Ödeme</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <h5>@ViewBag.Success @ViewBag.Empty</h5>
        </div>
        <div class="checkout__form">
            <h4>Fatura Detayları</h4>
            <form asp-controller="Profile" asp-action="Checkout">
                <input type="hidden" name="UserId" value="@ViewBag.UserId">
                <input type="hidden" name="Price" value="@ViewBag.BasketTotal">
                <input type="hidden" name="UserName" value="@ViewBag.UserName">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>İsim<span>*</span></p>
                                    <input type="text" required name="Name">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Soyisim<span>*</span></p>
                                    <input type="text" required name="Surname">
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Adres<span>*</span></p>
                            <textarea type="text" placeholder="Adres" class="checkout__input__add col-lg-12" required name="Address">@ViewBag.Address</textarea>
                        </div>  

                        <div class="checkout__input">
                            <p>Posta Kodu<span>*</span></p>
                            <input type="text" required name="PostCode">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Telefon Numarası<span>*</span></p>
                                    <input type="text" required name="Phone" value="@ViewBag.Phone">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="email" value="@ViewBag.Email" required name="Email">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Siparişiniz</h4>
                            <div class="checkout__order__products">Ürünler <span>Fiyat</span></div>
                            <ul>
                                @if (Model != null)
                                {
                                    foreach (Basket item in Model)
                                    {
                                        <li>@item.Product.Name <span>@((item.Product.Price * item.Amount).ToString("F")) ₺</span></li>
                                    } 
                                }
                                

                            </ul>
                            <br>
                            <div class="checkout__order__total">Toplam <span>@ViewBag.BasketTotal ₺</span></div>
                            <p>
                                Ödeme Yöntemi Seçin
                            </p>
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Kredi Kartı
                                    <input type="radio" id="payment" name="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="mobile">
                                    Mobil Ödeme
                                    <input type="radio" id="mobile" name="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">Ödemeyi Tamamla</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->